<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_passwdmana"
        style="@style/TxtTitle"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_item_selector"
        android:drawableRight="@drawable/right"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="15dp"
        android:text="密码管理"
        android:textColor="#585858"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black2" />

    <Button
        android:id="@+id/btn_linkus"
        style="@style/TxtTitle"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/setting_item_selector"
        android:drawableRight="@drawable/right"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="15dp"
        android:text="联系我们"
        android:textColor="#585858"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black2" />

    <LinearLayout
        android:id="@+id/lin_clearcache"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_selector"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_tongyong"
            style="@style/TxtTitle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="15dp"
            android:text="清除缓存"
            android:textColor="#585858"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_cachesize"
                style="@style/TxtTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="right|center_vertical"
                android:paddingLeft="16dp"
                android:paddingRight="15dp"
                android:text="0.00M"
                android:textColor="#585858"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="vertical">

                <com.jnwat.expressforadm.view.ProgressWheel
                    android:id="@+id/progress_wheel_clearcache"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:visibility="gone"
                    wheel:matProg_barColor="#04a3ff"
                    wheel:matProg_progressIndeterminate="true" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black2" />

    <LinearLayout
        android:id="@+id/updateContactsLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_item_selector"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_update_mailist"
            style="@style/TxtTitle"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="15dp"
            android:text="同步通讯录"
            android:textColor="#585858"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <com.jnwat.expressforadm.view.ProgressWheel
                android:id="@+id/progress_wheel_updateContacts"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:visibility="gone"
                wheel:matProg_barColor="#04a3ff"
                wheel:matProg_progressIndeterminate="true" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_sharesoftDestn"
        style="@style/TxtTitle"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_item_selector"
        android:drawableRight="@drawable/right"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="15dp"
        android:text="分享好友"
        android:textColor="#585858"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black2" />

    <TextView
        android:id="@+id/tv_modifyip"
        style="@style/TxtTitle"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_item_selector"
        android:drawableRight="@drawable/right"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="15dp"
        android:text="更换IP"
        android:textColor="#585858"
        android:textSize="16sp"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_marginTop="6dip"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20.0dip">

        <Button
            android:id="@+id/btnexit"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:background="@drawable/btn_bg_red2"
            android:padding="10.0dip"
            android:text="注销账户"
            android:textColor="@color/white" />

        <com.jnwat.expressforadm.view.ProgressWheel
            android:id="@+id/progress_wheel_exit"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="right|center_vertical"
            android:visibility="gone"
            wheel:matProg_barColor="#04a3ff"
            wheel:matProg_progressIndeterminate="true" />
    </LinearLayout>

</LinearLayout>